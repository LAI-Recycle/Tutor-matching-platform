        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ms-auto mb-2 mb-md-0">
          {{#if user.isAdmin}}
          <li class="nav-item">
            <a href="/admin" class="nav-link">Admin 後台</a>
          </li>
          {{/if}}
          <li class="nav-item">
            <a href="/logout"><button class="btn btn-outline-success my-sm-0 my-2">Logout</button></a>
          </li>
        </ul>
      </div>
      {{else}}
      <div class="container-fluid">
        <a type="button" class="btn btn-secondary" href="/signup">Sign Up</a>
        <a type="button" class="btn btn-secondary" href="/signin">Sign In</a>
      </div>
      {{/if}}
    </div>
